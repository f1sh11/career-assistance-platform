{
  "name": "2hours",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "server": "nodemon server/server.js",
    "dev-all": "concurrently --kill-others-on-fail --names \"FRONT,API\" --prefix-colors \"cyan,magenta\" --raw \"npm run dev:front\" \"npm run dev:server\"",
    "dev:front": "npm run clear && cross-env NODE_ENV=development next dev",
    "dev:server": "npm run clear && cross-env NODE_ENV=development nodemon server/server.js",
    "clear": "cls || clear",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "next": "^15.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "autoprefixer": "^10.4.13",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^4"
  }
}
